@using OgrenciMVC.Models.EntityFramework
@model List<TBLNOTLAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!---<h2>BURASI NOTLAR KISMI</h2>------>
<table class="table table-bordered">
    <tr>
        <th>NOT ID</th>
        <th>ÖĞRENCİ</th>
        <th>DERS</th>
        <th>SINAV 1</th>
        <th>SINAV 2</th>
        <th>SINAV 3</th>
        <th>ORTALAMA</th>
        <th>DURUM</th>
        <!--sonradan eklenen alan-->
        <th>GÜNCELLE</th>



    </tr>

    <tbody>
        @foreach (var snv in Model)
        {
            <tr>
                <td>@snv.NOTID</td>
                <td>@snv.OGRID</td>
                <td>@snv.DERSID</td>
                <td>@snv.SINAV1</td>
                <td>@snv.SINAV2</td>
                <td>@snv.SINAV3</td>
                <td>@snv.ORTALAMA</td>
                <td>@snv.DURUM</td>

                <!--sonradan eklenen alan-->
                <td><a href="/Notlar/NotGetir/@snv.NOTID " class="btn btn-warming">Güncelle</a></td>


                <td></td>
            </tr>
        }

    </tbody>

</table>

