@using OgrenciMVC.Models.EntityFramework
@model List<TBLKULUPLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!---<h2>Kulüpler</h2>----->
<table class="table table-bordered">
    <tr>
        <th>KULÜP ID</th>
        <th>KULÜP ADI</th>
        <th>İŞLEMLER</th>
    </tr>

    <tbody>
        @foreach (var klp in Model)
        {
            <tr>
                <td>@klp.KULUPID</td>
                <td>@klp.KULUPAD</td>
                <!--sonradan eklenen kısımlar-->
                <td><a href="/Kulupler/Sil/@klp.KULUPID" class="btn btn-danger">Sil</a>
                <a href="/Kulupler/KulupGetir/@klp.KULUPID" class="btn btn-success">Güncelle</a></td>

            </tr>
        }

    </tbody>

</table>

<!--Bu kısma bir buton ekleriz-->
<a href="/Kulupler/YeniKulup" class="btn btn-primary">Yeni Kulup Kaydı</a>