@using OgrenciMVC.Models.EntityFramework
@model List<TBLOGRENCILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!---<h2>Burası Öğrenci Sayfası</h2>----->
<table class="table table-bordered">
    <tr>
        <th>ÖĞRENCİ ID</th>
        <th>ÖĞRENCİ ADI</th>
        <th>ÖĞRENCİ SOYADI</th>
        <th>ÖĞRENCİ CİNSİYETİ</th>
        <th>ÖĞRENCİ KULÜBÜ</th>
        
        <!--sonradan eklenen alan-->
        <th>İŞLEMLER</th>


    </tr>

    <tbody>
        @foreach (var ogr in Model)
        {
            <tr>
                <td>@ogr.OGRENCIID</td>
                <td>@ogr.OGRAD</td>
                <td>@ogr.OGRSOYAD</td>
                <td>@ogr.OGRCINSIYET</td>
                <!--sonradan eklenen alan-->
                <td>@ogr.OGRKULUP</td>

                <!--sonradan eklenen kısımlar-->
                <td>
                    <a href="/Ogrenci/Sil/@ogr.OGRENCIID" class="btn btn-danger">Sil</a>
                    <a href="/Ogrenci/OgrenciGetir/@ogr.OGRENCIID" class="btn btn-success">Güncelle</a>
                </td>
            </tr>
        }

    </tbody>

</table>
<!--Bu kısma bir buton ekleriz-->
<a href="/Ogrenci/YeniOgrenci" class="btn btn-primary">Yeni Öğrenci Kaydı</a>

